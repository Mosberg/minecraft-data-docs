{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/Mosberg/minecraft-data-docs/tree/main/schemas/nbt/potion_nbt.schema.json",
  "title": "Potion NBT",
  "type": "object",

  "properties": {
    "Potion": { "type": "string" },

    "CustomPotionEffects": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "Id": { "type": "integer" },
          "Amplifier": { "type": "integer" },
          "Duration": { "type": "integer" }
        },
        "additionalProperties": true
      }
    },

    "CustomPotionColor": { "type": "integer" }
  },

  "additionalProperties": true
}
