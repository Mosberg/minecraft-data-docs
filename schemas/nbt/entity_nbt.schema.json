{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/Mosberg/minecraft-data-docs/tree/main/schemas/nbt/entity_nbt.schema.json",
  "title": "Entity NBT",
  "type": "object",

  "properties": {
    "Motion": {
      "type": "array",
      "items": { "type": "number" },
      "minItems": 3,
      "maxItems": 3
    },

    "direction": {
      "type": "array",
      "items": { "type": "number" },
      "minItems": 3,
      "maxItems": 3
    },

    "power": {
      "type": "array",
      "items": { "type": "number" },
      "minItems": 3,
      "maxItems": 3
    },

    "ActiveEffects": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "Id": { "type": "integer" },
          "Duration": { "type": "integer" },
          "Amplifier": { "type": "integer" },
          "Ambient": { "type": "integer" },
          "ShowParticles": { "type": "integer" },
          "ShowIcon": { "type": "integer" }
        },
        "additionalProperties": true
      }
    },

    "rewardExp": { "type": "integer" },

    "Passengers": {
      "type": "array",
      "items": { "$ref": "#/definitions/entity" }
    },

    "ArmorItems": {
      "type": "array",
      "items": { "$ref": "#/definitions/item" },
      "minItems": 4,
      "maxItems": 4
    },

    "HandItems": {
      "type": "array",
      "items": { "$ref": "#/definitions/item" },
      "minItems": 2,
      "maxItems": 2
    },

    "HandDropChances": {
      "type": "array",
      "items": { "type": "number" },
      "minItems": 2,
      "maxItems": 2
    },

    "ArmorDropChances": {
      "type": "array",
      "items": { "type": "number" },
      "minItems": 4,
      "maxItems": 4
    },

    "NoAI": { "type": "integer" },
    "NoGravity": { "type": "integer" },
    "Silent": { "type": "integer" },
    "Fire": { "type": "integer" },
    "Invulnerable": { "type": "integer" },

    "Attributes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "Name": { "type": "string" },
          "Base": { "type": "number" },
          "Modifiers": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "Name": { "type": "string" },
                "Amount": { "type": "number" },
                "Operation": { "type": "integer" },
                "UUID": {
                  "type": "array",
                  "items": { "type": "integer" },
                  "minItems": 4,
                  "maxItems": 4
                }
              },
              "additionalProperties": true
            }
          }
        },
        "additionalProperties": true
      }
    },

    "Health": { "type": "number" },

    "AngerTime": { "type": "integer" },
    "AngryAt": {
      "type": "array",
      "items": { "type": "integer" },
      "minItems": 4,
      "maxItems": 4
    },

    "CustomName": { "type": "string" },
    "CustomNameVisible": { "type": "integer" },
    "PersistenceRequired": { "type": "integer" }
  },

  "additionalProperties": true,

  "definitions": {
    "entity": {
      "type": "object",
      "properties": {
        "id": { "type": "string" }
      },
      "additionalProperties": true
    },

    "item": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "Count": { "type": "integer" },
        "tag": { "type": "object" }
      },
      "additionalProperties": true
    }
  }
}
