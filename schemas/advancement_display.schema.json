{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/Mosberg/minecraft-data-docs/schemas/advancement_display.schema.json",
  "title": "Minecraft Advancement Display",
  "description": "Schema for the display object in Minecraft advancement JSON files. See https://minecraft.wiki/w/Advancement for authoritative documentation.",
  "externalDocs": {
    "description": "Minecraft Wiki: Advancement",
    "url": "https://minecraft.wiki/w/Advancement"
  },
  "type": "object",
  "properties": {
    "icon": { "type": "object" },
    "title": { "type": "string" },
    "description": { "type": "string" },
    "background": { "type": "string" },
    "frame": { "type": "string", "enum": ["task", "challenge", "goal"] },
    "show_toast": { "type": "boolean" },
    "announce_to_chat": { "type": "boolean" },
    "hidden": { "type": "boolean" }
  },
  "additionalProperties": true
}
